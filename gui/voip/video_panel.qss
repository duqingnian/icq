QWidget#VoipPanelHeader
{
    min-height: 100dip;
    max-height: 100dip;
    background: transparent;
}

QWidget[VoipPanelHeaderText_Name="true"]
{
    font-size: 16dip;
    text-align: center;
}

QWidget[VoipPanelHeaderText_Status="true"]
{
    text-align: center;
}

QWidget[VoipPanelHeaderText_Has_Video="true"]
{
      color: #ffffff;
}

QWidget[VoipPanelHeaderText_Has_Video="false"]
{
      color: #000000;
}

QWidget[VideoPanelMain="true"]
{
    min-height: 98dip;
    max-height: 98dip;
    background: transparent;
}


QWidget[VideoPanel="true"]
{
    min-height: 98dip;
    max-height: 98dip;
    background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1.0,
                                     stop: 0 rgba(0, 0, 0, 0%), stop: 1.0 rgba(0, 0, 0, 20%));
}

QWidget[VideoPanelHeader="true"]
{
    min-height: 36dip;
    max-height: 36dip;
    background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1.0,
                                     stop: 0 rgba(0, 0, 0, 20%), stop: 1.0 rgba(0, 0, 0, 0%));
}

QWidget[VideoPanelHeaderMac="true"]
{
    min-height: 28dip;
    max-height: 28dip;
    background: rgba(255, 255, 255, 70%);
    border-top-left-radius: 5dip;
    border-top-right-radius: 5dip;
}

QWidget[VideoPanelHeaderText="true"]
{
    font-size: 15dip;
    text-align: left;
}

QPushButton[CallSoundOn="true"]
{
    min-width: 24dip;
    max-width: 24dip;
    min-height: 24dip;
    max-height: 24dip;
    outline: none;
    border-image: url(:/voip/volume_100);
}
QPushButton[CallSoundOn="true"]:hover
{
    border-image: url(:/voip/volume_100_hover);
}

